@model List<MVCSite.Models.TimelineModel>
@{
    ViewData["Title"] = "Linha do Tempo";
}

<link rel="stylesheet" type="text/css" href="/css/timelineStyle.css">

<div class="container">
    <div class="title">
        <h1>A jornada até então...</h1>
		<h2>Insira em qual página está!</h2>
    </div>
	<div class="timeline">
		<div class="timeline-row">
			@if (Model.Count >= 2)
			{
				@Html.Partial("_TimelineEventPartial", Model[1])
			}
			else
			{
				@Html.Partial("_TimelineEventPartial", Model[0]) 
			}
		</div>

		<div class="timeline-row">
			@if (Model.Count >= 3)
			{
