<div class="search-container">
	<form method="post" action="/Timeline/Search">
		<div class="form-outline">
			<input type="search" name="query" class="form-control" placeholder="Parou em qual página?" aria-label="Atualizar" />
		</div>
		<button class="search-button" type="submit">Pesquisar</button>
	</form>
</div>


<div class="alert"><strong>@TempData["Message"]</strong></div>